Studentas ivesk(){
    Studentas Laik;
    int sum=0, n, m;
    cout<<"Iveskite Pavarde: "; cin>>Laik.pav;
    cout<<"Iveskite varda: "; cin>>Laik.vard;
    cout<<"Iveskite pazymiu skaiciu: "; cin>>n;
    for (int i=0; i<n; i++){
        cout<<"Iveskite "<<i+1<<" paz. is "<<n<<" : "; cin>>m;
        Laik.paz.push_back(m);
        sum+=m;
    }
    cout<<"Iveskite egzamina: "; cin>>Laik.egzas;
    Laik.Vidurkiorez=Laik.egzas*0.6+double(sum)/double(Laik.paz.size())*0.4;
    Laik.Medianosrez=Laik.egzas*0.6+median(Laik.paz)*0.4;
    return Laik;
}

double median(vector<int> v){
sort(v.begin(), v.end());
if(v.size()%2==0)
    return (v[v.size()/2-1]+v[v.size()/2])/2;
else
    return v[v.size()/2];
}
